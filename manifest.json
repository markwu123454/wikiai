{
  "manifest_version": 3,
  "name": "YouTube Transcript Extension",
  "version": "1.0",
  "description": "Displays a transcript for YouTube videos with customizable settings.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_title": "YouTube Transcript Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
